<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ftsoporte.example01_2016.MainActivity"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name and LastName"
            android:id="@+id/textView2"
            android:textSize="20dp"
            android:textColor="#e40b0b" />

        <EditText
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:id="@+id/Edtname"
            android:textColor="#060606" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:id="@+id/textView3"
            android:textColor="#e40b0b"
            android:textSize="20dp" />

        <EditText
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/Edtemail" />


        <CheckBox

            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:text="On"
            android:id="@+id/checkBox"
            android:checked="true"
            android:layout_gravity="center_horizontal"
            android:textColor="#e40b0b" />

        <RadioGroup
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RadioGroup>


        <CheckBox
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:text="Off"
            android:id="@+id/checkBox2"
            android:checked="false"
            android:layout_gravity="center_horizontal"
            android:textColor="#e40b0b" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="134dp"
            android:layout_height="wrap_content">


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F"
                    android:id="@+id/rbopcion1"
                    android:checked="true" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:id="@+id/rbopcion2"
                    android:checked="false" />
            </RadioGroup>
        </LinearLayout>



        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="Ok"
            android:id="@+id/BtnOk"
            android:layout_gravity="center_horizontal"
            android:typeface="normal"
            android:visibility="visible"
            android:background="#f7d2cfcc"
            android:textColor="#ce2727"
            android:elegantTextHeight="true"
            android:focusable="false"
            android:onClick="ClickOk" />

        <ImageView
            android:layout_width="284dp"
            android:layout_height="216dp"
            android:id="@+id/imageView"
            android:src="@drawable/a" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="287dp"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout"
        android:background="#e00909">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:id="@+id/editText3"
            android:layout_gravity="center_vertical"
            android:text="MakeUpSignOn"
            android:clickable="true"
            android:editable="true"
            android:enabled="true"
            android:textColor="#ffffff"
            android:textSize="15dp" />

    </LinearLayout>

</RelativeLayout>
